<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CameraActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="247sp"
        android:layout_height="247sp"
        android:layout_marginTop="88sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/photo_button"
        android:layout_width="161sp"
        android:layout_height="54sp"
        android:layout_marginStart="125sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="125sp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:text="@string/Photo"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="161sp"
        android:layout_height="54sp"
        android:layout_marginStart="125sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="125sp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:text="@string/Gallery"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_button" />

    <Button
        android:id="@+id/goBackCameraActivity"
        android:layout_width="161sp"
        android:layout_height="54sp"
        android:layout_marginStart="125sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="125sp"
        android:background="@drawable/round_button"
        android:fontFamily="sans-serif"
        android:onClick="goBack"
        android:text="@string/GoBack"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery_button" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:text=""
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFinder" />


</androidx.constraintlayout.widget.ConstraintLayout>